//사용자에게 정수를 입력받아
//짝수면 "짝수입니다" 출력하기

import java.util.Scanner;
public class Test1{
	public static void main(String[] args){
		Scanner scan = new Scanner(System.in);
		
		System.out.println("정수를 입력하시오");
		int number=scan.nextInt();
		
		
		if(number%2 == 0){
			System.out.println("짝수입니다.");
		}else{
			System.out.println("홀수입니다. ");
		}
		
	}
}