public class Star3{
	public static void main(String[] args){
	
	
		// 4-3-2-1-0
		// System.out.print(" ");
		// System.out.print(" ");
		// System.out.print(" ");
		// //1-2-3-4-5
		
		//공백이 감소하면서 반복, 별이 증가하면서 반복 
		//공백 4 별 1  공백 3 별 2 공백 
		
		for(int i=1;i<=5;i++){
			for(int j=5;j>i;j--){
				 System.out.print(" ");
			}
			for(int k=1;k<=i;k++){
				System.out.print("*");
			}
			System.out.println();
		}	
			
	}
}	